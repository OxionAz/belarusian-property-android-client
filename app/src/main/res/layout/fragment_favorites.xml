<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activities.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute" >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:text="Здесь пока нет сохраненных объявлений"/>

            <LinearLayout
                android:id="@+id/sale_flats_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Продажа квартир"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sale_flats_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_rooms_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Продажа комнат"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sale_rooms_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_houses_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Продажа домов"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sale_houses_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sale_areas_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Продажа участков"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/sale_areas_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rent_flats_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Аренда квартир"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rent_flats_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rent_rooms_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Аренда комнат"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rent_rooms_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rent_houses_container"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAllCaps="true"
                    android:text="Аренда домов"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rent_houses_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/property_item"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/clear_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_clear_black_24dp"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_anchor="@id/container"
        app:layout_behavior="com.oxionaz.belarussian_property.other.util.ScrollFABBehavior"/>

</android.support.design.widget.CoordinatorLayout>